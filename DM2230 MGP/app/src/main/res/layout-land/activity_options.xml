<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background = "@drawable/menu_background"
    android:orientation = "horizontal"
    tools:context="com.sidm.mgp_2016.Options">

    <Button
        android:id="@+id/Btn_Return"
        android:layout_height="50dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/button"
        android:text="Back to Main Menu"
        android:textSize="18dp"
        android:textColor="#bdfcf2"
        android:layout_marginBottom="38dp"
        android:layout_width="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Volume: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/volumeSlider_Text"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"/>

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:id="@+id/volumeSlider_Bar" />

    <TextView
        android:text="Vibration: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_alignLeft="@id/Btn_Return"
        android:id="@+id/vibrateToggle_Text"
        android:textSize="24sp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vibrateToggle_Button"
        android:checked="true"
        android:layout_marginTop="92dp"
        android:layout_marginLeft="285dp"
        android:textOn="On"
        android:textOff="Off" />
</RelativeLayout>